<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-darks">
		
		<!-- Logo for the Website leading to home page -->
	  <a class="navbar-brand" href="/"><img src="/images/TS_Logo_sm.png"> </a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav ml-auto">
		 <!-- 	There is no User logged in		 -->
		  <% if (!currentUser){ %>
			  <li class="nav-login">
				<a class="btn btn-sm btn-outline-secondary nav-link" href="/auth/google">Login/Register</a>
			  </li>
		  <% } else { %>
		 <!-- 	There is a User logged in	  -->
			  <li>
				  <h4><a class="mr-2 nav-item nav-link" href="/collection/<%= currentUser.cardcollection.id %>"> My Collection</a></h4>
			  </li>
			  <li>
				  <h4><a class="mr-2 nav-item nav-link" href="/profile"><%= currentUser.username.substr(0, currentUser.username.indexOf("#")) %></a></h4>
			  </li>
			  <li>
				<a class="btn btn-sm btn-outline-secondary nav-item nav-link " style="margin: 5% 10px auto;" href="/logout">Logout</a>
			  </li>
		  <% } %>
		  </ul>
	  </div> 
	</nav>
</body>

<div class="background">
	<div class="container">
		<% if(error && error.length > 0 ){ %>
			<div class="alert alert-danger" role="alert">
				<%= error %>	
			</div>
		<% } %> 
		<% if(success && success.length > 0 ){ %>
			<div class="alert alert-success" role="alert">
				<%= success %>	
			</div>
		<% } %> 
	</div>