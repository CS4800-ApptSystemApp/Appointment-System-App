            <div class="mt-0 card-list-container overflow-auto">
                <table class="table table-dark">
                    <tbody id="added-cards">
                        <% if(addedCards.length > 0) { %>
                        <% for (let i = 0; i < addedCards.length; i++) { %>
                            <tr class="<%=addedCards[i].id%>" class="card-in-list">
