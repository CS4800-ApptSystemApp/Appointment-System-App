<% include partials/header %>
<script src="/js/allCollectionsPublic.js"></script>

<!-- USER COLLECTIONS -->

    <div class="container m-3">
        <h3>All Collection</h3>
            <% if(collections.length > 0) { %>
            <div class="container col-4 d-flex flex-row flex-wrap overflow-auto">
                <% for (let i = 0; i < collections.length; i++) { %>
                <!-- change name to id once collections from db are set up -->
                <a href="allCollections/editCollection/<%=collections[i]._id%>">
                    <button class="btn btn-outline-success m-2 bg-dark group-container">
                        <%=collections[i].name%></button>
                </a>
                <% } %>
                <a href="allCollections/editCollection/new">
                    <div class="m-2 container">
                     <i class="fas fa-plus-circle" style="font-size:4.5rem"></i>
                    </div>
                </a>
            </div>
            <% } %>
    </div>


<% include partials/footer %>