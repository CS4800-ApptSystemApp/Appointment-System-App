<% include partials/header %>

<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<h1 style="text-align: center;">
				Edit Username
			</h1>
			<form action="/profile/<%= currentUser._id %>/edit/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="username" placeholder="username" value="<%= currentUser.username.substring(0,currentUser.username.length-5) %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/profile">Go Back</a>
		</div>
	</div>
</div>

<% include partials/footer %>