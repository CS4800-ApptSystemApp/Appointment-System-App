<% include partials/_header %>

<!-- user-deck-container -->
<div>
    <div class="container col-11 mx-auto">
        <div class="content-container">
            <h4>Decks</h4>
            <!-- card-container -->
            <div class="decks-container d-flex flex-row flex-wrap ">
                <!-- loop through cards and decks-->
                <%for (let i = 0; i < 9 ; i++) {%>
                <!-- container to hold deck -->
                <a class="deck-card-container m-2 mx-auto rounded-lg" href="/deck">
                    <div class="img-prev-container m-3 container">
                        <img class="img-fluid img-prev" src="<%=decks[0].cards[i].imageUrl%>" alt="">
                        <img class="img-fluid img-prev" src="<%=decks[0].cards[i+1].imageUrl%>" alt="">
                        <img class="img-fluid img-prev" src="<%=decks[0].cards[i+2].imageUrl%>" alt="">
                    </div>
                    <!-- end img-prev-container -->
                    <div class="deck-prop-container">
                        <h5 class="m-2">Name:<%=decks[0].deck_name%></h5>
                        <p class="m-2">Rarity:</p>
                        <p class="m-2">Date Added:</p>
                    </div>
                    <!-- end deck-prop-container -->
                </a>
                <!-- end deck-card-container -->
                <%}%>
            </div>
            <!-- end deck-container -->
        </div>
        <!-- end card-container -->
    </div>
</div>
<!-- end user-deck-container -->
<% include partials/_footer %>